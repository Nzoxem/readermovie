.userHead{
  margin: 10rpx 0 20rpx 10rpx
}
.headImg{
  border-radius:50%;
  overflow:hidden;
  width:60rpx;
  height: 60rpx;
  vertical-align: middle;
} 
.userTime{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
}
.postTitle{
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}
.postImg{
  margin-left: 16px;
  width: 100%;
  height: 400rpx;
  margin: auto 0;
  margin-bottom: 15px;
}
.postContent{
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.postInfo{
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}
.save{
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.num{
  vertical-align: middle;
  margin-right: 20px;
}
.postContainer{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: white;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}