@import "../star/star-tmp.wxss";
.container{
  display: flex;
  flex-direction: column;
}
.headimg{
  width: 100%;
  height: 320rpx;
  /* 模糊化 */
  -webkit-filter: blur(20px);
}
.head-img-hover{
  width: 100%;
  height: 320rpx;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
}
.mainTitle{
  font-size: 19px;
  color:#fff;
  font-weight: bold;
  margin-top: 50rpx;
  margin-left: 40rpx;
  letter-spacing: 2px;
}
.subTitle{
  font-size: 28rpx;
  color: #fff;
  margin-left: 40rpx;
  margin-top: 30rpx;
} 
.like{
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  margin-left: 40rpx;
}
.hl{
  color:#f21146;
  font-size: 22rpx;
  margin-right: 10rpx;
}
.pl{
  color:#666;
  font-size: 22rpx;
  margin-right: 30rpx;
}
.movie-img{
  height: 240rpx;
  width: 175rpx;
  position: absolute;
  top: 160rpx;
  right: 30rpx;
}
.summary{
  margin-left: 40rpx;
  margin-top: 40rpx;
  color: #777777;
}
.originTitle{
  color: #1f3463;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}
.flex-row{
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}
.mark{
  margin-right: 30rpx;
  /* 不换行 */
  white-space: nowrap;
  color: #999999;
}
.hr{
  margin-top: 45rpx;
  height: 1px;
  width: 750rpx;
  background-color: #d9d9d9;

}
.synopsis{
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
  margin-left: 40rpx;
}
.summary-cont{
  margin-top: 20rpx;
  margin-left: 40rpx;
  line-height: 40rpx;
  letter-spacing: 1px;
}
.cast{
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
}
.castfont{
  color:#999;
  margin-bottom:40rpx;
}
.cast-imgs{
  /* 不换行 */
  white-space: nowrap;
}
.castcont{
  /* 行内样式盒子模型 */
  display: inline-flex;
  flex-direction: column;
  margin-bottom: 50rpx;
  margin-right: 40rpx;
  width: 170rpx;
  text-align: center;
  white-space: normal;
}
.castimg{
  width: 170rpx;
  height: 210rpx;
}
.castname{
  margin: 10rpx auto 0;
  word-break: break-all;
}